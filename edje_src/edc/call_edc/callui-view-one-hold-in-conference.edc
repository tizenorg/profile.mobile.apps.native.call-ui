		base: "font="VC_FONT_REGULAR" font_size=34 color=#FFFAFAFF ellipsis=1.0";
	}
	style {
		name: "ATO008";
		base: "font="VC_FONT_REGULAR" font_size=27 color=#FFFAFAFF align=center";
