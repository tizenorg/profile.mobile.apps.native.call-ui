#define BG_PADDING_LEFT_MIN_X			22
#define BG_WITH_ARROW_PAD_RIGHT_W		(12+50+32)
#define BG_WITHOUT_ARROW_PAD_RIGHT_W	22
#define STATUS_TXT_MIN_HEIGHT			54
#define CALLER_ID_SIZE					138 138
#define CALLER_ID_PAD_LEFT_W			32
#define TXT_MAIN_H						76
#define TXT_MAIN_PAD_BOTTOM_H			6
#define TXT_SUB_MIN_H					46
#define MANAGE_ARROW_PADDING_LEFT		32
#define MANAGE_ARROW_PADDING_BOTTOM		98
#define MANAGE_ARROW_SIZE				50 50

#define ACTIVE_INFO_PADDING_TOP_MIN_H				18
#define ACTIVE_INFO_STATUS_TXT_PADDING_BOTTOM_H		48

#define HOLD_INFO_PADDING_TOP_MIN_H					10
#define HOLD_INFO_STATUS_TXT_PADDING_BOTTOM_H		16

images {
	image: IMG_SRC_DIR/"call_multi_ic_arrow.png" COMP;
	image: IMG_SRC_DIR/"call_multi_hold_bg.png" COMP;
	image: IMG_SRC_DIR/"call_multi_hold_btn_merge_bg.png" COMP;
	image: IMG_SRC_DIR/"call_multi_hold_btn_swap_bg.png" COMP;
